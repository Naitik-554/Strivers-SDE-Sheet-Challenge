/*
Following is the class structure of the Node class:

class Node
{
public:
    int data;
    Node *next;
    Node()
    {
        this->data = 0;
        next = NULL;
    }
    Node(int data)
    {
        this->data = data; 
        this->next = NULL;
    }
    Node(int data, Node* next)
    {
        this->data = data;
        this->next = next;
    }
};
*/

Node *findMiddle(Node *head) {
    if(head == NULL) return head;
    Node* front = head;
    int cnt = 0;
    while(front != NULL) {
        cnt++;
        front = front->next;
    }
    int check = cnt;
    cnt = cnt/2;
    front = head;
    while(cnt--) {
        front = front->next;
    } 
    return front;
}

